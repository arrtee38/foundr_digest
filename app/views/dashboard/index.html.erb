<%= render partial: "shared/heading", locals: { title: 'Dashboard', tagline: 'Browse newsletters or upload your own.' } %>

<!-- main box area -->
<div class="border border-black border-2 mb-20 px-3 py-5 max-w-3xl mx-auto">
  <div class="flex">
      <div class="basis-1/2">
        <div class="flex gap-x-2">
          <div class="basis-1/6">
            <img src="https://via.placeholder.com/150" alt="">
          </div>
          <div class="basis-5/6">
            <p class="text-lg">{{ Title }}</p>
            <p class="text-sm">{{ Description }}</p>
            <p>
          </div>
        </div>
      </div>
      <div class="basis-1/2 text-right">
        <p>{{ Num }} Subscribers</p>
        <p><a href="/stakeholder_updates/new" class="text-brand-purple underline">Share Update</a></p>
        <p><a href="#" class="text-brand-purple underline">Edit Subscription</a></p>
      </div>
  </div>
</div>

<!-- newsletters area -->
<div class="px-3 py-5 max-w-3xl mx-auto space-y-2">
  <% 5.times do %>
    <div class="flex">
        <div class="basis-1/2">
          <div class="flex gap-x-2">
            <div class="basis-1/6">
              <img src="https://via.placeholder.com/150" alt="">
            </div>
            <div class="basis-5/6">
              <p class="text-lg">{{ Title }}</p>
              <p class="text-sm">{{ Description }} {{ (URL) }}</p>
              <p>
            </div>
          </div>
        </div>
        <div class="basis-1/2 text-right">
          <div class="relative flex items-start py-4">
              <div class="min-w-0 flex-1 text-sm">
                  <label for="subscribed" class="font-medium text-gray-900">{{ Subscribe Status }}</label>
              </div>
              <div class="ml-3 flex h-5 items-center">
                  <input id="subscribed" aria-describedby="subscribed-description" name="subscribed" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-brand-gold focus:ring-brand-gold">
              </div>
          </div>
        </div>
    </div>
  <% end %>
</div>

