<<%= render partial: "shared/heading", locals: { title: @stakeholder_update.title, tagline: 'Review and confirm your update below.' } %>

<div class="max-w-3xl mx-auto">
  <div class="border p-4 border-dashed border-2">
    <%= @stakeholder_update.content %>
  </div>

  <%= form_for @stakeholder_update do |f| %>
    <%= f.text_field :confirmed_at, type: 'hidden', value: DateTime.now %>
    <div class="flex">
      <div class="mt-8 text-right">  
        <%= link_to 'Edit', edit_stakeholder_update_path(id: @stakeholder_update.id), class: "inline-flex rounded-md bg-brand-purple-light px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-purple focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-purple-light" %>
      </div>
      <div class="mt-8 text-right flex-1">  
        <button type="submit" class="inline-flex rounded-md bg-brand-purple-light px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-purple focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-purple-light">Confirm and Share</button>
      </div>
    </div>
  <% end %>
</div>
