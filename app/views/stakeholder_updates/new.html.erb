<<%= render partial: "shared/heading", locals: { title: 'Write an Update', tagline: 'Share the latest news from your company.' } %>

<div class="max-w-3xl mx-auto">
  <%= form_for @stakeholder_update do |form| %>
    <div class=''>
      <label for="title" class="block text-sm font-medium leading-6 text-gray-900">Title / Headline</label>
          <div class="mt-2">
            <%= form.text_field :title, required: true, placeholder: "December 2023 Newsletter", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-gold sm:text-sm sm:leading-6" %>
          </div>
          <small>This will be the clickable link in your subscribers' inbox.</small>
    </div>
    
    <div class="field">
      <%= form.rich_text_area :content %>
    </div>
    <div class="mt-6 flex items-center justify-end gap-x-6">
      <button type="submit" class="w-full rounded-md bg-brand-purple-light px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-purple focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-purple-light">Preview and Confirm</button>
    </div>
  <% end %>
</div>
