<%= render partial: 'shared/heading', locals: { title: 'Apply to Founder Digest', tagline: 'Each submission is manually reviewed by our team within 24 hours.' } %>

<% plan_name = params[:plan] || "free" %>

<div class="max-w-lg mx-auto">
 <%= form_for UserSubmission.new do |f| %>
  <input type="hidden" id="user_submission_plan_name" name="user_submission[plan_name]" value="<%= params[:plan]%>">
  <div class="space-y-12">
    <div>
      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <label for="first_name" class="block text-sm font-medium leading-6 text-gray-900">First name</label>
          <div class="mt-2">
            <%= f.text_field :first_name, placeholder: "John", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-gold sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-3">
          <label for="last_name" class="block text-sm font-medium leading-6 text-gray-900">Last name</label>
          <div class="mt-2">
            <%= f.text_field :last_name, placeholder: "Digest", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-gold sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email address</label>
          <div class="mt-2">
            <%= f.text_field :email, type: "email", placeholder: "john@digest.com", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-gold sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="sm:col-span-6">
          <label for="website" class="block text-sm font-medium leading-6 text-gray-900">Comapny website</label>
          <div class="mt-2">
            <%= f.text_field :website, type: "url", placeholder: "https://www.johndigest.com", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-gold sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>
    </div>

    <div>
      <div class="mt-10 space-y-10">
        <fieldset>
          <legend class="text-sm font-semibold leading-6 text-gray-900">What's your role?</legend>
          <div class="mt-6 space-y-6">
            <div class="flex items-center gap-x-3">
              <%= f.radio_button :job_role, "csuite", class: "h-4 w-4 border-gray-300 text-brand-gold focus:ring-brand-gold" %>
              <%= f.label :job_role_csuite, "C-Suite", class: "block text-sm font-medium leading-6 text-gray-900" %>
            </div>
            <div class="flex items-center gap-x-3">
              <%= f.radio_button :job_role, "founder", class: "h-4 w-4 border-gray-300 text-brand-gold focus:ring-brand-gold" %>
              <%= f.label :job_role_founder, "Founder", class: "block text-sm font-medium leading-6 text-gray-900" %>
            </div>
            <div class="flex items-center gap-x-3">
              <%= f.radio_button :job_role, "employee", class: "h-4 w-4 border-gray-300 text-brand-gold focus:ring-brand-gold" %>
              <%= f.label :job_role_employee, "Employee", class: "block text-sm font-medium leading-6 text-gray-900" %>
            </div>
          </div>
        </fieldset>
      </div>
    </div>
  
    <div class="col-span-full">
      <label for="text" class="block text-sm font-medium leading-6 text-gray-900">About</label>
      <div class="mt-2">
        <%= f.text_area :text, placeholder: "Stakeholders, this month we...", class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-brand-gold sm:text-sm sm:leading-6"%>
      </div>
      <p class="mt-3 text-sm leading-6 text-gray-600">The more detailed, the more likely you'll be accepted.</p>
    </div>

    <div class="mt-6 flex items-center justify-end gap-x-6">
      <button type="submit" class="w-full rounded-md bg-brand-purple-light px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand-purple focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-gold">Apply</button>
    </div>
  </div>
 <% end %>

</div>

